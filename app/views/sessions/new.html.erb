<div class="login_form">
		<fieldset>
			<legend> iTask </legend>
				<%= form_tag do %>
					<%= text_field_tag :username, params[:username], :placeholder=> 'Email' %>
					<%= password_field_tag :password, params[:password], :placeholder=> 'Password'%>
					<%= submit_tag "Login", :class=>"btn blue-hover" %>
				<% end %>

			<div class="notice">&nbsp; <%= notice %>  </div> 

			<p class="signup">Not yet registered? <a href="/signup" class="blue-hover">Sign up</a>now</p>
					
		</fieldset>
</div>